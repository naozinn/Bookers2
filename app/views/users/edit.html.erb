<h2>User info</h2>
<div>
   <%= form_with model:@user, local:true do |f| %>
    <div>
      <label for="inputName">Name</label>
      <br><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
    </div>
      
    <div>
      <label for="inputImage">Image</label>
      <br><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
    </div>
    <div>
      <label for="inputIntroduction">Introduction</label>
      <br><%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"説明"%>
    </div>
    <div>
      <%= f.submit "Update User" %>
    </div>
   <% end %>
</div>