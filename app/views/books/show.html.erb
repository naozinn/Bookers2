<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <h2>User info</h2>
      <div class="profile-container">
       <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <tr>
        <th>
          <br>
            <strong>name</strong>
        </th>
        <th class = "profile-name">
          <strong><%= @user.name %></strong>
        </th>
      </tr>
      <tr>
        <th>
          <br>
            <strong>introduction</strong>
        </th>
        <th class = "profile-introduction">
          <strong><%= @user.introduction %></strong>
        </th>
      </tr>
        <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
      </div>


      <h2>New book</h2>

      <%= form_with model: @book_new, local:true do |f| %>

        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <br><%= f.submit 'Create Book' %>
      <% end %>
    </div>
      <div class="col-lg-8">
       <h2>Book detail</h2>


        <table class="table table-striped">

          <tbody>
              <tr>
                <td class="col-md-1" id="books_show_image">
                  <%= link_to user_path(@user.id) do %>
                    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
                　<% end %>
                  <br>
                  <%= link_to user_path(@user.id) do %>
                    <%= @user.name %>
                  <% end %>
                  </br>
                </td>
                <td class="col-md-1" id="books_show_title">
                  <%= link_to book_path(@book.id) do %>
                    <%= @book.title %>
                  <% end %>
                </td>
                <td class="col-md-2" id="books_show_body"><%= @book.body %></td>
                <td class="col-md-2" id="books_show_Edit"><%= link_to "Edit",edit_book_path(@book.id) %></td>
                <td class="col-md-2" id="books_show_Destroy"><%= link_to "Destroy",book_path(@book.id), method: :delete, data: {confirm: "本当に消しますか？"} %></td>
              </tr>
          </tbody>
        </table>
      </div>
    </div>
</div>
<footer>
  <p>CopyRight Infratop.inc</p>
</footer>