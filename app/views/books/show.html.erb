<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <h2>User info</h2>
      <div class="profile-container">
       <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <br>
        <th>
          <strong>name</strong>
        </th>
        <th class = "profile-name">
          <strong><%= @user.name %></strong>
        </th>
      </br>
      <br>
        <th>
          <strong>introduction</strong>
        </th>
        <th class = "profile-introduction">
          <strong><%= @user.introduction %></strong>
        </th>
      </br>
        <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
      </div>


      <h2>New book</h2>

      <%= form_with model: @book_new, local:true do |f| %>

        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <br><%= f.submit 'Create Book' %>
      <% end %>
    </div>
      <div class="col-lg-8">
       <h2>Book detail</h2>


        <table class="table table-striped">

          <tbody>

              <tr>
                <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
                 <%= link_to @user.name, user_path, class: 'nav-link text-blue' %>
                </td>
                 <td><%= link_to @book.title, book_path, class: 'nav-link text-blue' %></td>
                 <td><%= @book.body %></td>
                 <td><%= link_to "Edit",edit_book_path, class: 'nav-link text-blue' %></td>
                 <td><%= link_to "Destroy",book_path, method: :delete, data: {confirm: "本当に消しますか？"} %></td>
              </tr>

          </tbody>
        </table>
      </div>
    </div>
</div>
